#!/bin/bash

# NOTE: remove `| tail -n 1` for full, file-by-file output:

echo
echo "GO files:"
find -name "*.go" -not -path "*/vendor/*" -not -path "*_test.go" | xargs wc -l | tail -n 1
echo
echo "With unit tests:"
find -name "*.go" -not -path "*/vendor/*" | xargs wc -l | tail -n 1
echo
echo "GO and SQL files:"
find \( -name "*.go" -o -name "*.sql" \) -not -path "*/vendor/*" -not -path "*_test.go" | xargs wc -l | tail -n 1
echo
echo "With unit tests:"
find \( -name "*.go" -o -name "*.sql" \) -not -path "*/vendor/*" | xargs wc -l | tail -n 1
